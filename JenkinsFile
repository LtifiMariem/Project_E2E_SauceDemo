pipeline {
    agent any 
    
     tools {
        jdk 'JDK'          
        maven 'Maven'      
    }

    environment {
        HOME_URL = 'https://www.saucedemo.com/'
        HOME_CREDENTIALS = credentials('saucedemo-creds') 
    }

    triggers {
        cron('H * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/LtifiMariem/Project_E2E_SauceDemo.git', 
                    credentialsId: 'jeton GitHub'
            }
        }

        stage('Create properties file') {
            steps {
                echo "Creating env-config.properties ..."

                // Créer dossier s'il n'existe pas
                bat 'mkdir src\\test\\resources\\configs 2>nul'

                bat """
echo url=%HOME_URL%> src\\test\\resources\\configs\\env-config.properties
echo username=%HOME_CREDENTIALS_USR%>> src\\test\\resources\\configs\\env-config.properties
echo password=%HOME_CREDENTIALS_PSW%>> src\\test\\resources\\configs\\env-config.properties
                """

                // Afficher contenu pour vérification
                bat 'type src\\test\\resources\\configs\\env-config.properties'
            }
        }

        stage('Run Maven Tests') {
            steps {
                echo "Running Maven tests..."
                bat 'mvn clean test verify'
            }
        }

        stage('Generate Cucumber Report') {
            steps {
                echo 'Maven will generate the Cucumber HTML report (plugin in pom.xml)'
            }
        }

        stage('Publish Cucumber Report') {
            steps {
                publishHTML(target: [
                    reportDir: 'target/report',
                    reportFiles: 'cucumber-report.html',
                    reportName: 'Cucumber Report'
                ])
            }
        }
    }

    post {
        always {
            echo "Deleting env-config.properties for security..."
            bat 'del /f /q src\\test\\resources\\configs\\env-config.properties'
        }
    }
}
